{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["vue", "eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "eqeqeq": "error",
    "indent": ["warn", "tab"],
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "no-mixed-spaces-and-tabs": "warn",
    "no-unused-vars": "warn",
    "no-var": "error",
    "object-curly-spacing": ["warn", "never"],
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "strict": 0
  }
}
